{
  "type": "LayoutElement",
  "data": {
    "user": {
      "name": "{{ user.name }}",
      "profile": {% include 'profile.json' %},
      "settings": {
        "theme": "{{ theme | default('light') }}",
        "notifications": [
          {% for notif in notifications %}
          {
            "type": "{{ notif.type }}",
            "enabled": {{ notif.enabled | lower }}
          }{% if not loop.last %},{% endif %}
          {% endfor %}
        ]
      }
    }
  }
}
