{
  "type": "object",
  "properties": {
    "mainView": {
      "component": "Container",
      "version": 1,
      "properties": {
        "layout": {
          "type": "object",
          "stateAware": true,
          "stateType": "Control",
          "wrappedType": "LayoutConfig",
          "properties": {
            "direction": {
              "type": "string",
              "enum": ["horizontal", "vertical"]
            },
            "spacing": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "component": "TextView",
                "version": 1
              },
              {
                "component": "ButtonView",
                "version": 1
              }
            ]
          }
        }
      }
    },
    "computed": {
      "totalChildren": {
        "expression": "count(mainView.children)",
        "dependencies": ["mainView.children"],
        "returnType": "number"
      },
      "isVertical": {
        "expression": "mainView.layout.direction == 'vertical'",
        "dependencies": ["mainView.layout.direction"],
        "returnType": "boolean"
      }
    },
    "stateManager": {
      "type": "object",
      "stateAware": true,
      "stateType": "Focus",
      "wrappedType": "FocusState",
      "properties": {
        "focusedElement": {
          "type": "string"
        },
        "focusHistory": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "selection": {
      "type": "object",
      "stateAware": true,
      "stateType": "Selection",
      "wrappedType": "SelectionState",
      "properties": {
        "selectedItems": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "selectionMode": {
          "type": "string",
          "enum": ["single", "multiple"]
        }
      }
    }
  },
  "required": ["mainView"],
  "unevaluatedProperties": false
}