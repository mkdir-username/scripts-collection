#!/usr/bin/env bash
# SDUI Validator Pre-commit Hook v1.0.0

set -e

echo "Running pre-commit checks..."

# Run lint
echo "1/4 Linting..."
npm run lint:fix

# Run type check
echo "2/4 Type checking..."
npm run typecheck

# Run tests
echo "3/4 Running tests..."
npm run test

# Check formatting
echo "4/4 Checking formatting..."
npm run format:check

echo "All pre-commit checks passed!"
