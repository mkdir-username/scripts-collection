{
  "name": "vscode-sdui-validator",
  "version": "2.3.1",
  "description": "Modular SDUI JSON validator with Jinja2 support for VSCode",
  "main": "dist/index.js",
  "bin": {
    "sdui-validate": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && npm run make-executable",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "compile": "tsc -p tsconfig.build.json",
    "make-executable": "chmod +x dist/cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run typecheck && npm run test",
    "bundle:check": "node scripts/check-bundle-size.js",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "validator",
    "json",
    "sdui",
    "jinja2",
    "vscode",
    "alfa-bank"
  ],
  "author": "FMS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "jsonc-parser": "^3.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
